# Lyfe Supertask Knowledge Generator - Environment Configuration
# Copy this file to .env and fill in your actual values

# ========================================
# OpenAI Configuration
# ========================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_organization_id_here

# ========================================
# Application Settings
# ========================================
NODE_ENV=development
LOG_LEVEL=info
PORT=3000

# ========================================
# Processing Configuration
# ========================================
BATCH_SIZE=10
MAX_CONCURRENT_REQUESTS=5
PROCESSING_TIMEOUT=30000

# ========================================
# File Processing Settings
# ========================================
MAX_FILE_SIZE=10MB
SUPPORTED_FORMATS=json,pdf,docx,md
OUTPUT_FORMAT=json

# ========================================
# Quality Control Settings
# ========================================
MIN_CONTENT_LENGTH=100
MAX_CONTENT_LENGTH=10000
MIN_QUIZ_QUESTIONS=2
MAX_QUIZ_QUESTIONS=10

# ========================================
# Platform Integration (Optional)
# ========================================
LYFE_API_BASE_URL=https://api.lyfe.com
LYFE_API_KEY=your_lyfe_api_key_here
LYFE_WEBHOOK_URL=https://your-app.com/webhook

# ========================================
# Development Settings
# ========================================
DEBUG=true
VERBOSE_LOGGING=true
SAVE_INTERMEDIATE_FILES=true

# ========================================
# Security Settings
# ========================================
API_RATE_LIMIT=100
CONTENT_VALIDATION=strict
SANITIZE_OUTPUT=true

# ========================================
# Monitoring & Analytics (Optional)
# ========================================
ANALYTICS_ENABLED=false
METRICS_ENDPOINT=https://metrics.lyfe.com
ERROR_REPORTING_URL=https://errors.lyfe.com 